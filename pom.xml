    <profiles>
        <!--本地测试-->
        <profile>
            <id>develop</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <filter.property.path></filter.property.path>
                <shutdown.server.script></shutdown.server.script>
                <remove.webapp.script></remove.webapp.script>
                <startup.server.script></startup.server.script>
                <local.nginx.script></local.nginx.script>
                <remote.host></remote.host>
                <remote.password></remote.password>
                <filter.property.path>src/main/resources/properties/develop.properties</filter.property.path>
            </properties>
        </profile>
        <!--uat测试环境-->
        <profile>
            <id>uat</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <filter.property.path></filter.property.path>
                <shutdown.server.script></shutdown.server.script>
