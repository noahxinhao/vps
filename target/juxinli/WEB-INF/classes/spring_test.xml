<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/mvc"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:aop="http://www.springframework.org/schema/aop"
             xmlns:tx="http://www.springframework.org/schema/tx"
             xmlns:context="http://www.springframework.org/schema/context"
             xmlns:jdbc="http://www.springframework.org/schema/jdbc"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-3.0.xsd http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">

    <beans:bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <beans:bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <beans:property name="driverClassName" value="org.h2.Driver"/>
        <beans:property name="url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1"/>
        <beans:property name="username" value="sa"/>
        <beans:property name="password" value=""/>
    </beans:bean>

    <jdbc:initialize-database data-source="dataSource" ignore-failures="DROPS" >
        <jdbc:script location="classpath:db-schema.sql"/>
        <jdbc:script location="classpath:db-data-file.sql"/>
    </jdbc:initialize-database>


    <beans:bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean ">
        <beans:property name="dataSource" ref="dataSource"></beans:property>
        <beans:property name="packagesToScan">
            <beans:list>
                <beans:value>com.infomorrow.model</beans:value>
            </beans:list>
        </beans:property>
        <beans:property name="hibernateProperties">
            <beans:props>
                <beans:prop key="hibernate.dialect">org.hibernate.dialect.H2Dialect</beans:prop>
                <beans:prop key="hibernate.format_sql">true</beans:prop>
                <beans:prop key="hibernate.show_sql">true</beans:prop>
            </beans:props>
        </beans:property>


        <beans:property name="annotatedClasses">
            <beans:list>
                <beans:value>com.infomorrow.model.usermanager.SysUserC</beans:value>
                <beans:value>com.infomorrow.model.usermanager.UserRole</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysUserVersion</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysUserScore</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysUserReport</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysApplyForChangeReport</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysInvitation</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysLeaveMessage</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysPhoneCaptcha</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysSuggest</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysDataResource</beans:value>
                <beans:value>com.infomorrow.model.usermanager.SysSmsLog</beans:value>
                <beans:value>com.infomorrow.model.alipay.Info_Alipay_Transaction</beans:value>
                <beans:value>com.infomorrow.model.alipay.Info_Alipay_Basic</beans:value>
                <beans:value>com.infomorrow.model.alipay.Info_Alipay_Bind_Account</beans:value>
                <beans:value>com.infomorrow.model.alipay.Info_Alipay_Bind_Card</beans:value>
                <beans:value>com.infomorrow.model.icbcdebit.ICBCDebit</beans:value>
                <beans:value>com.infomorrow.model.icbcdebit.ICBCDebitTran</beans:value>
                <beans:value>com.infomorrow.model.cmbdebit.CMBDebit</beans:value>
                <beans:value>com.infomorrow.model.cmbdebit.CMBDebitTransaction</beans:value>
                <beans:value>com.infomorrow.model.cmbcredit.CMBCreditRepay</beans:value>
                <beans:value>com.infomorrow.model.chinamobile.Info_China_Mobile_ShangHai_Basic</beans:value>
                <beans:value>com.infomorrow.model.chinamobile.Info_China_Mobile_ShangHai_Transaction</beans:value>
                <beans:value>com.infomorrow.model.housefund.Info_Shanghai_Housefund_Transaction</beans:value>
                <beans:value>com.infomorrow.model.housefund.Info_Shanghai_Housefund_Basic</beans:value>
                <beans:value>com.infomorrow.model.taobao.Info_Taobao_Transaction_Item</beans:value>
                <beans:value>com.infomorrow.model.taobao.Info_Taobao_Transaction</beans:value>
                <beans:value>com.infomorrow.model.taobao.Info_Taobao_Basic</beans:value>
                <beans:value>com.infomorrow.model.taobao.Info_Taobao_Address</beans:value>
                <beans:value>com.infomorrow.model.jingdong.Info_JingDong_Address</beans:value>
                <beans:value>com.infomorrow.model.jingdong.Info_JingDong_Basic</beans:value>
                <beans:value>com.infomorrow.model.jingdong.Info_JingDong_Transaction</beans:value>
                <beans:value>com.infomorrow.model.jingdong.Info_JingDong_Transaction_Item</beans:value>
                <beans:value>com.infomorrow.model.yixun.Info_YiXun_Address</beans:value>
                <beans:value>com.infomorrow.model.yixun.Info_YiXun_Basic</beans:value>
                <beans:value>com.infomorrow.model.yixun.Info_YiXun_Transaction</beans:value>
                <beans:value>com.infomorrow.model.yixun.Info_YiXun_Transaction_Item</beans:value>
                <beans:value>com.infomorrow.model.yihaodian.Info_YiHaoDian_Address</beans:value>
                <beans:value>com.infomorrow.model.yihaodian.Info_YiHaoDian_Basic</beans:value>
                <beans:value>com.infomorrow.model.yihaodian.Info_YiHaoDian_Transaction</beans:value>
                <beans:value>com.infomorrow.model.yihaodian.Info_YiHaoDian_Transaction_Item</beans:value>
                <beans:value>com.infomorrow.model.amazon.Info_Amazon_Address</beans:value>
                <beans:value>com.infomorrow.model.amazon.Info_Amazon_Basic</beans:value>
                <beans:value>com.infomorrow.model.amazon.Info_Amazon_Transaction</beans:value>
                <beans:value>com.infomorrow.model.amazon.Info_Amazon_Transaction_Item</beans:value>
                <beans:value>com.infomorrow.model.dangdang.Info_DangDang_Address</beans:value>
                <beans:value>com.infomorrow.model.dangdang.Info_DangDang_Basic</beans:value>
                <beans:value>com.infomorrow.model.dangdang.Info_DangDang_Transaction</beans:value>
                <beans:value>com.infomorrow.model.dangdang.Info_DangDang_Transaction_Item</beans:value>
                <beans:value>com.infomorrow.model.china_unicom.Info_China_Unicom_Transaction</beans:value>
                <beans:value>com.infomorrow.model.china_unicom.Info_China_Unicom_Basic</beans:value>
            </beans:list>
        </beans:property>
    </beans:bean>
    <!--检测注解 -->
    <context:component-scan base-package="com.infomorrow"/>

    <beans:bean id="txManager"
                class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <beans:property name="sessionFactory" ref="sessionFactory" />
    </beans:bean>

    <beans:bean
            class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" />
    <beans:bean
            class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />

    <beans:bean class="org.springframework.mock.web.MockServletContext"/>
    <aop:aspectj-autoproxy proxy-target-class="true"/>
    <tx:annotation-driven transaction-manager="txManager"/>


</beans:beans>
